NODE_ENV=development
PORT=3000
MONGODB_URI=mongodb://localhost:27017/hotel-analytics

# Frontend URL (for CORS and redirects)
# Development: http://localhost:5173
# Production: https://hotelmoguls.com
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# ===============================================
# AI & VECTOR DATABASE CONFIGURATION
# ===============================================

# OpenAI Configuration (Required for chat and embeddings)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=2000

# -----------------------------------------------
# MILVUS / ZILLIZ CLOUD (NEW - Primary Vector DB)
# -----------------------------------------------
# For sub-second chat responses and 3+ months historical data
# Get credentials from: https://cloud.zilliz.com/

MILVUS_ADDRESS=https://in03-xxxxx.api.gcp-us-west1.zillizcloud.com
MILVUS_TOKEN=your_zilliz_cloud_api_token
MILVUS_SSL=true

# Background sync worker (syncs metrics every hour)
MILVUS_SYNC_ENABLED=true
MILVUS_SYNC_CRON=0 * * * *

# -----------------------------------------------
# PINECONE (Legacy - Fallback Vector DB)
# -----------------------------------------------
# Used if Milvus is not configured

PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=hotel-analytics-metrics

# ===============================================
# GOOGLE APIS
# ===============================================

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:3000/api/google/callback

# Google Ads Configuration
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token_here
# Manager Account ID (MCC) - REQUIRED if you're accessing client accounts through a manager
# Leave empty if you're accessing a standalone Google Ads account directly
# Format: 1234567890 (10 digits, no dashes)
GOOGLE_ADS_LOGIN_CUSTOMER_ID=
GOOGLE_ADS_REDIRECT_URL=http://localhost:3000/api/google-ads/callback

# Google Places API Configuration
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ===============================================
# EVENT DISCOVERY APIs (Revenue Opportunities)
# ===============================================

# Eventbrite API - FREE tier: https://www.eventbrite.com/platform/api
EVENTBRITE_PRIVATE_TOKEN=your_eventbrite_private_token_here

# SerpAPI - FREE 100 searches/month: https://serpapi.com/
SERPAPI_API_KEY=your_serpapi_key_here

# OpenRouter for AI web search (optional)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ===============================================
# 2CHAT WHATSAPP API
# ===============================================
# 2Chat API for WhatsApp messaging
# Get your API key from: https://app.2chat.io/
TWOCHAT_API_KEY=your_2chat_api_key_here
TWOCHAT_WHATSAPP_GROUP_ID=your_whatsapp_group_id_here

# ===============================================
# META ADS BALANCE ALERTS
# ===============================================
# Automated monitoring of Meta Ads account balances
# Sends WhatsApp alerts when balance falls below threshold

# Enable/disable balance alert worker
BALANCE_ALERT_ENABLED=true

# Balance threshold in currency units (e.g., INR, USD)
# Alert triggers when balance < this value
BALANCE_ALERT_THRESHOLD=5000

# Cron schedule for balance checks (local development only)
# Default: 0 */3 * * * (every 3 hours)
# Notifications are sent max once per 24 hours per project
BALANCE_ALERT_CRON=0 */3 * * *

# Secret token for external cron services (Vercel/Production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Used to authenticate requests from cron-job.org or similar services
CRON_SECRET_TOKEN=your_random_secret_token_here_make_it_long_and_random